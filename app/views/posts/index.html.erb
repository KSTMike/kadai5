<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<h1>Tubuyakuu一覧</h1>

<table>
  <tr>
    <th>内容</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><% link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to "Tubuyakuuを編集する", edit_post_path(post.id) %></td>
    <%= link_to 'Tubuyakuuを削除する', post_path(post.id), method: :delete %>
  </tr>
<% end %>
</table>

<%= link_to '新しくTubuyakuuを投稿する', new_post_path %>
