<p>Find me in app/views/posts/index.html.erb</p>

<h1>Tubuyakuu一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>内容</th>
  </tr>

  <% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><% link_to '詳細を確認する', posts_path(post.id) %></td>
    <td><%= link_to "Tubuyakuuを編集する", edit_polymorphic_path(post.id), data: { confirm: '本当に編集していいですか？'} %></td>
    <td><%= link_to 'Tubuyakuuを削除する', post_path(post.id), data: { confirm: '本当に編集していいですか？'}, method: :delete %><td>
  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくTubuyakuu〜', new_post_path %>



